<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="#fff"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:id="@+id/cardItem"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView

            android:id="@+id/imageCardOwner"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background_blue_transpa"
            app:shapeAppearanceOverlay="@style/Circular"
 />
        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cardOwnerTxt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoreg"
                android:text="John Wick"
                android:textColor="#878787"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/cardJobTxt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoreg"
                android:text="Full Stack Developer"
                android:textColor="#878787" />

        </LinearLayout>

        <ImageButton
            android:clickable="true"
            android:src="@drawable/ic_baseline_delete_24"
            android:id="@+id/deletCardBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF6161"
             />
    </LinearLayout>



</androidx.cardview.widget.CardView>